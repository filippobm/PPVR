@using PPVR.WebApp.Resources
@model PPVR.WebApp.ViewModels.Ideologia.IdeologiaViewModel

@{
    ViewBag.Title = Labels.IdeologiaEditar;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
{
    @Html.HiddenFor(model => model.IdeologiaId)
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr>

        @Html.ValidationSummary(false, null,
            new { id = "validation-summary", @class = "alert alert-danger", role = "alert" })

        <div class="form-group">
            <div class="col-md-1 text-right">
                @Html.ValidationMessageFor(model => model.Nome, "*",
                    new { @class = "text-danger", title = "Campo obrigatório" })

                @Html.LabelFor(model => model.Nome, new { @class = "control-label" }):
            </div>
            <div class="col-md-4">
                @Html.EditorFor(model => model.Nome,
                    new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            maxlength = "30",
                            placeholder = Labels.IdeologiaNomePlaceholder,
                            autofocus = "autofocus"
                        }
                    })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1 text-right">
                @Html.LabelFor(model => model.Enabled, new { @class = "control-label" })
            </div>
            <div class="col-md-4">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Enabled)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-4">
                <input type="submit" value="@Labels.Salvar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Labels.IdeologiaTitleListaIdeologias, "Index")
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function () {
            validateForm("form", "validation-summary");
        });
    </script>
}