@using PPVR.WebApp.Resources
@{
    ViewBag.Title = Labels.RelatorioOcorrenciasTipoPropaganda;
}

<div id="container" style="padding-top: 60px;">
</div>

@section scripts
{
    @Scripts.Render("~/bundles/highcharts")

    <script>
        $(function () {

            var url = '@Url.Action("ValoresGastosTipoOcorrenciaJson", "Relatorios")';

            $.getJSON(url,
                function (data) {
                    // Set up the chart
                    var chart = new Highcharts.Chart({
                        chart: {
                            renderTo: 'container',
                            type: 'column',
                            margin: 110,
                            options3d: {
                                enabled: true,
                                alpha: 0,
                                beta: 0,
                                depth: 50,
                                viewDistance: 50
                            }
                        },
                        title: {
                            text: 'Valores Gastos por Tipo de Ocorrência'
                        },
                        xAxis: {
                            categories: ['Tipo de Propaganda'],
                            crosshair: true
                        },
                        yAxis: {
                            allowDecimals: true,
                            min: 0,
                            title: {
                                text: 'Total'
                            }
                        },

                        plotOptions: {
                            column: {
                                depth: 25
                            }
                        },
                        series: data
                    });
                }
            );
        });
    </script>
}